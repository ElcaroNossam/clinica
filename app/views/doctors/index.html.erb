<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @doctors.each do |doctor| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to doctor.name, doctor %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(doctor, size: 150), doctor %>
            </h5>
            <p class="card-text"><%= pluralize(doctor.categories.count, "category") %></p>
            <%= link_to "View profile", doctor, class: "btn btn-outline-success" %>
            <% if doctor_signed_in? %>
              <% if doctor == current_doctor %>
                <%= link_to "Edit profile", edit_doctor_path(doctor), class: "btn btn-outline-info" %>
              <% end %>
              <% if current_user.role == "admin" %>
                <%= link_to "Delete user", doctor_path(doctor), class: "btn btn-outline-danger", method: :delete,
                data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(doctor.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>