<h1 class="text-center mt-4">Recomendations</h1>

<div class="container">
<div class="flickr_pagination row justify-content-center">
<%= will_paginate @stocks, :container => true %>
</div>
  <% @stocks.each do |stock| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
          <strong> Patient: </strong> <%= User.find(stock.user_id).name %>
          <strong> Doctor: </strong> <%= stock.namedoctor %>
          <strong> Recomendation: </strong>   <%= stock.content %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="flickr_pagination row justify-content-center">
  <%= will_paginate @stocks, :container => true %>
</div>
</div>