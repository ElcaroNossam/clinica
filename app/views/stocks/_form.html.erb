<%= render 'shared/errors', obj: @stock %>
  <%= form_with(model: @stock, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  
    <div class="form-group row">
    <%= f.label :content, "Recomendation", class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :content, class: "form-control shadow rounded", placeholder: "Enter your recomendation" %>
      </div>
    </div>
    
    <%= f.file_field :picture, class: "mt-2"%>
    
    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
   
  
  </span>
<% end %>
