<h1 class="text-center mt-4">Категории врачей</h1>

<div class="container">
 <div class="flickr_pagination row justify-content-center ">
  <%= will_paginate @categories, :container => true%>
  </div>
</div>


<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(category.doctors.count, "Doctor") %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<div class="container">
  <div class="flickr_pagination row justify-content-center ">
    <%= will_paginate @categories, :container => true %>
  </div>
</div>