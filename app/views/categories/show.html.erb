<h1 class="text-center mt-4">Категория: <%= @categorie.name %></h1>


  <div class="text-center mt-4">
  <% if current_user && current_user.has_role?(:admin) %>
       <%= link_to "Edit category name", edit_category_path(@categorie), class: "btn btn-outline-info" %>
       <%= link_to "Delete", category_path(@categorie), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
    </div>


