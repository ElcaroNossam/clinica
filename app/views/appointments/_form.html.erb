<%= render 'shared/errors', obj: @appointment %>
 <%= form_with(model: @appointment, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
 
  <div class="form-group row">
   <%= f.label :data, "Дата и время", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :data, class: "form-control shadow rounded", placeholder: "Enter data and time" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :content, "Ваша проблема", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :content, class: "form-control shadow rounded", placeholder: "Do you have problem?" %>
    </div>
   </div>

   <div class="form-group row">
   <%= f.label :doctor, class: "col-2 col-form-label text-light" %>
   <div class="col-10"> 
   <%= f.collection_select(:doctor_ids, Doctor.where(id: session[:appointment_doctor_id] ), :id, :name,
   { prompt: "Потверди запись выбрав имя доктора!"}, { multiple: true, size: 3, class: "custom-select shadow rounded" } )%>
   </div>
 </div>

  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>