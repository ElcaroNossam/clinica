<h1 class="text-center mt-4">Appointment : <%= @appointment.data %></h1>

<% if user_signed_in? && current_user.role == "admin" %>
  <div class="text-center mt-4">
    <%= link_to "Edit ", edit_appointment_path(@appointment), class: "btn btn-outline-info" %>
    <%= link_to "Delete", appointment_path(@appointment), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
<% end %>

<div class="container">
  <h3 class="text-center mt-4">Appointments:</h3>
  <%= render @appointment %>
</div>
    
