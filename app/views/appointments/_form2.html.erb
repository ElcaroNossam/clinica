<%= render 'shared/errors', obj: @appointment %>
<%= form_with(model: @appointment, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
 
  <div class="form-group row">
    <%= f.label :data, "Дата и время", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :data, class: "form-control shadow rounded", placeholder: "Введите дату и время!" %>
    </div>
  </div>
  <div class="form-group row">
        <%= f.label :content, "Причина", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
        <%= f.text_field :content, class: "form-control shadow rounded", placeholder: "Что у вас случилось?" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>