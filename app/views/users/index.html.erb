<h1 class="text-center mt-4">Users</h1>

<div class="flickr_pagination row justify-content-center">
  <%= will_paginate @users, :container => true %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.name, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            
            <% if user_signed_in?  %>
                  <%= link_to "View profile", user, class: "btn btn-outline-success" %>
                <% if current_user.has_role?(:admin) %>
                  <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
                  <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete,
                  data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>   
                <% end %>
            <% end %>                     
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination row justify-content-center">
  <%= will_paginate @users, :container => true %>
</div>