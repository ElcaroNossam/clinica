<h1 class="text-center mt-4"><%= @user.name %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if user_signed_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  <% if current_user.role == "admin" %>
    <%= link_to "Delete user", user_path(@user), class: "btn btn-outline-danger", method: :delete,
                data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
   <% end %>
 </div>
<% end %>

<% if user_signed_in? &&  current_user.role == "user" %>
<h3 class="text-center mt-4">As</h3>

<% end %>



